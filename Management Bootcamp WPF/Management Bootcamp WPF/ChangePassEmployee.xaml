<Window x:Class="Management_Bootcamp_WPF.ChangePassEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_Bootcamp_WPF"
        mc:Ignorable="d"
        Title="Change Password" WindowStartupLocation="CenterScreen" HorizontalAlignment="Center" Height="250" Width="400">
    <Grid>
        <Label x:Name="labelOldPassword" Content="Old Password" HorizontalAlignment="Left" Margin="24,14,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBoxOldPassword" HorizontalAlignment="Left"  Height="23" Margin="24,42,0,0" VerticalAlignment="Top" Width="344"/>
        <Label x:Name="labelNewPassword" Content="New Password" HorizontalAlignment="Left" Margin="24,71,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBoxNewPassword1" HorizontalAlignment="Left"  Height="23" Margin="24,105,0,0" VerticalAlignment="Top" Width="344"/>
        <PasswordBox x:Name="passwordBoxNewPassword2" HorizontalAlignment="Left"  Height="23" Margin="24,145,0,0" VerticalAlignment="Top" Width="344"/>
        <Button x:Name="buttonSave" Content="Save" HorizontalAlignment="Left" Margin="293,182,0,0" VerticalAlignment="Top" Width="75" Click="buttonSave_Click"/>
    </Grid>
</Window>
